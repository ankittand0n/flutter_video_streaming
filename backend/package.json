{
  "name": "netflix-backend",
  "version": "1.0.0",
  "description": "Unified backend for Flutter Netflix Clone with API and Admin GUI",
  "main": "src/server.js",
  "scripts": {
    "start": "node --max-old-space-size=512 src/server.js",
    "dev": "nodemon --max-old-space-size=512 src/server.js",
    "dev:host": "cross-env HOST=0.0.0.0 npm run dev",
    "build": "npm run build:admin",
    "build:admin": "cd admin && vite build",
    "dev:admin": "cd admin && vite",
    "test": "jest",
    "test:local": "jest",
    "test:server": "cross-env TEST_EXTERNAL=true jest",
    "test:api": "jest --testPathPattern=api.test.js",
    "test:api:local": "jest --testPathPattern=api.test.js",
    "test:api:server": "cross-env TEST_EXTERNAL=true jest --testPathPattern=api.test.js",
    "test:integration": "jest --testPathPattern=integration.test.js",
    "test:integration:local": "jest --testPathPattern=integration.test.js",
    "test:integration:server": "cross-env TEST_EXTERNAL=true jest --testPathPattern=integration.test.js",
    "test:numeric": "jest --testPathPattern=numeric-fields.test.js",
    "test:numeric:local": "jest --testPathPattern=numeric-fields.test.js",
    "test:numeric:server": "cross-env TEST_EXTERNAL=true jest --testPathPattern=numeric-fields.test.js",
    "test:rating": "jest --testPathPattern=rating.test.js",
    "test:rating:local": "jest --testPathPattern=rating.test.js",
    "test:rating:server": "cross-env TEST_EXTERNAL=true jest --testPathPattern=rating.test.js",
    "test:auth-flow": "jest --testPathPattern=auth-flow.test.js",
    "test:auth-flow:local": "jest --testPathPattern=auth-flow.test.js",
    "test:auth-flow:server": "cross-env TEST_EXTERNAL=true jest --testPathPattern=auth-flow.test.js"
  },
  "keywords": [
    "netflix",
    "flutter",
    "backend",
    "tmdb",
    "authentication",
    "admin-gui"
  ],
  "author": "ankittand0n",
  "license": "MIT",
  "config": {
    "external_api_url": "https://admin.namkeentv.com"
  },
  "dependencies": {
    "@prisma/client": "^5.12.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "prisma": "^5.12.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "vite": "5.1.7"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 1,
    "detectOpenHandles": true,
    "detectLeaks": false,
    "forceExit": true,
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ],
    "setupFiles": [
      "<rootDir>/test/jest.env.js"
    ]
  }
}
